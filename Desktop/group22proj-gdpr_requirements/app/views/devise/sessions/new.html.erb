<div class="page-heading">
  <h2>Welcome Back!</h2>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :login %><br />
    <%= f.text_field :login,  autofocus: true, autocomplete: "email", class: "form-control w-50"%>
  </div>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control w-50"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Login", class: "btn btn-primary w-50"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
