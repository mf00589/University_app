<div class="page-heading">
  <h2>Add Video</h2>
</div>

<%= form_with(model: [@contest, @video], local: true) do |form| %>

  <% if @video.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@video.errors.count, "error") %> prohibited this submission from being saved:</h2>

      <ul>
        <% @video.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= link_to 'Upload Video', 'https://www.youtube.com/my_videos_upload', class: "btn btn-secondary" %>


  <div class="form-group">
    <%= form.label :link %>
    <%= form.text_field :link, class: 'form-control', required: true %>
    <%= form.hidden_field :contest_id  %>
    <span class="help-block">A link to the video on YouTube.</span>

  </div>

  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-primary"%>
  </div>
<% end %>