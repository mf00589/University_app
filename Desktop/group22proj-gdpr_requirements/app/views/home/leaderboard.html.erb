<div class="page-heading mt-4">
  <h2>Top 10 Freelancers</h2>
</div>
<table class="table w-100">
  <thead>
  <tr>
    <th scope="col">Username</th>
    <th scope="col">Contests Won</th>
    <th scope="col">Contests Entered</th>
    <th scope="col">Join Date</th>
    <th scope="col">Profession</th>
  </tr>
  </thead>
  <tbody>

  <% @ranking.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.contests_won %></td>
      <td><%= user.contests_entered %></td>
      <td><%= user.created_at.strftime("%m/%d/%Y") %></td>
      <% if user.is_student %>
        <td>Student</td>
      <% else %>
        <td>Professional</td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
